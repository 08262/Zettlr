<form class="pomodoro" method="GET" action="#">
  <input type="number" class="pomodoro-task" value="{{duration_task}}" name="task" min="1" max="100" required>
  <input type="number" class="pomodoro-short" value="{{duration_short}}" name="short" min="1" max="100" required>
  <input type="number" class="pomodoro-long" value="{{duration_long}}" name="long" min="1" max="100" required>
  <div class="cb-group">
    <label class="cb-toggle">
      <input type="checkbox" name="mute" id="mute" {{#unless mute}}checked="checked"{{/unless}}>
      <div class="toggle"></div>
    </label>
    <label for="mute">{{i18n 'pomodoro.mute'}}</label>
  </div>
  <input type="range" name="volume" min="0" max="100" value="{{volume}}">
  <input type="submit" value="{{i18n 'pomodoro.start'}}">
</form>
