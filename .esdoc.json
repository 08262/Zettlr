{
    "source": "./source",
    "destination": "./resources/docs",
    "excludes": ["node_modules", "jquery-ui.min.js"],
    "plugins": [{
        "name": "esdoc-standard-plugin",
        "option": {
            "undocumentIdentifier": {"enable": false},
            "unexportedIdentifier": {"enable": true},
            "brand": {
                "logo": "./resources/icons/png/512x512.png",
                "title": "Zettlr",
                "description": "A supercharged markdown editor for academics.",
                "repository": "https://github.com/Zettlr/Zettlr",
                "site": "https://www.zettlr.com/",
                "author": "Hendrik Erz"
            }
        }
        }]
    }
