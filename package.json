{
    "name": "Zettlr",
    "homepage": "https://www.zettlr.com",
    "author": {
    "name": "Hendrik Erz",
    "email": "zettlr@mailbox.org"
    },
    "repository": {
        "type": "git",
        "url": "git://github.com/Zettlr/Zettlr.git"
    },
    "version": "0.16.0",
    "license": "GPL-3.0",
    "description": "A powerful Markdown Editor with integrated tree view",
    "main": "./source/main.js",
    "scripts": {
        "postinstall": "electron-builder install-app-deps",
        "start": "electron .",
        "build:quick": "electron-builder --dir",
        "release:this": "electron-builder",
        "release:mac": "electron-builder --mac dmg",
        "release:win": "electron-builder --win nsis",
        "release:linux": "electron-builder --linux deb rpm",
        "less": "node scripts/less.js",
        "docs:build": "esdoc"
    },
    "build": {
        "appId": "com.zettlr.www",
        "productName": "Zettlr",
        "npmRebuild": false,
        "copyright": "This program is licensed under the GNU GPL v3 license.",
        "fileAssociations": [
            {
                "ext": [
                    "md",
                    "markdown"
                ],
                "name": "Markdown",
                "description": "Markdown document",
                "role": "Editor",
                "isPackage": false
            }
        ],
        "directories": {
            "output": "release",
            "app": "source"
        },
        "mac": {
            "category": "public.app-category.productivity",
            "target": "dmg",
            "icon": "resources/icons/icns/icon.icns",
            "asar": true,
            "extraResources": [
                {
                    "from": "resources/pandoc",
                    "to": "pandoc",
                    "filter": [
                        "**/*"
                    ]
                }
            ]
        },
        "win": {
            "target": "nsis",
            "icon": "resources/icons/ico/icon.ico",
            "asar": true,
            "extraResources": [
                {
                    "from": "resources/pandoc",
                    "to": "pandoc",
                    "filter": [
                        "**/*"
                    ]
                }
            ]
        },
        "linux": {
            "target": "deb",
            "synopsis": "Markdown editor",
            "category": "Office",
            "icon": "resources/icons/png",
            "asar": true,
            "extraResources": [
                {
                    "from": "resources/pandoc",
                    "to": "pandoc",
                    "filter": [
                        "**/*"
                    ]
                }
            ]
        },
        "dmg": {
            "backgroundColor": "rgba(200, 240, 170, 1)",
            "icon": "resources/icons/icns/icon.icns"
        },
        "nsis": {
            "oneClick": false,
            "perMachine": false,
            "allowElevation": true,
            "allowToChangeInstallationDirectory": true
        },
        "deb": {
            "priority": "optional"
        },
        "rpm": {}
    },
    "dependencies": {
        "chokidar": "^2.0.4",
        "clusterize.js": "^0.18.1",
        "codemirror": "^5.39.0",
        "command-exists": "^1.2.7",
        "jquery": "^3.3.1",
        "sanitize-filename": "^1.6.1",
        "semver": "^5.5.0",
        "showdown": "^1.8.6",
        "typo": "^1.0.6",
        "typo-js": "^1.0.3"
    },
    "devDependencies": {
        "chalk": "^2.4.1",
        "electron": "^2.0.3",
        "electron-builder": "^20.15.1",
        "esdoc": "^1.1.0",
        "esdoc-standard-plugin": "^1.0.0",
        "less": "^3.0.2"
    }
}
